{
  "name": "my-electron-app",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "start-server": "node src/api/server.js",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A portable Electron app with MongoDB",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "express": "^4.21.1",
    "mongoose": "^7.8.2",
    "portable-mongodb": "^2.1.14"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "MyElectronApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      {
        "from": "src/",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/portable-mongodb",
        "filter": ["!**/node_modules/**", "!**/*.md"]
      },
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "node_modules/portable-mongodb/mongodb-binaries",
        "to": "resources/mongodb-binaries"
      },
      {
        "from": "node_modules/portable-mongodb/mongodb-data",
        "to": "resources/mongodb-data"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "asar": true
  }
}
