{
  "name": "electron-mongodb",
  "version": "1.0.0",
  "description": "Electron app with Portable MongoDB",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "start-prod": "cross-env NODE_ENV=production electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "mongoose": "^8.8.1",
    "portable-mongodb": "^2.1.14",
    "sudo-prompt": "^9.2.1"
  },
  "build": {
    "appId": "com.example.electron.mongodb",
    "productName": "ElectronMongoDBApp",
    "directories": {
      "output": "setup"
    },
    "asar": false,
    "win": {
      "target": "nsis",
      "signingHashAlgorithms": ["sha256"]

      
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
