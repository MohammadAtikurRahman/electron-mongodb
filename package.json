{
  "name": "electron-mongodb",
  "version": "1.0.0",
  "description": "Electron app with Portable MongoDB",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "package": "electron-builder --dir",
    "make": "electron-builder --win --x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "mongoose": "^8.8.1",
    "portable-mongodb": "^2.1.14",
    "electron-log": "^5.0.0"
  },
  "build": {
    "appId": "com.example.electron.mongodb",
    "productName": "ElectronMongoDBApp",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
